<div class="mt-4"><p style="font-weight: bolder;">Informações para Saida de PDV</p></div>

<form action="/admin/ver_pdv/editar" method="post">
    <div class="container">  
        
        <input type="hidden" name="pdvId" value="{{pdv._id}}">
        
        <div class="row">        
            <div class="col-sm">
                <div class="card">
                    <div class="card-body">
                    <label for="">Nº de Controle:</label>
                    <p>{{pdv.nControle}}</p>
                    </div>
                </div>
            </div>

            <div class="col-sm">
                <div class="card">
                    <div class="card-body">
                    <label for="empresa">Empresa:</label>
                            <select class="form-control" name="empresa">
                                <option value="{{pdv.empresa}}">{{pdv.empresa}}</option>
                                <option value="Viação Regional">Viação Regional</option>
                                <option value="Viação Jaua">Viação Jaua</option>
                            </select>
                    </div>
                </div>
            </div>

            <div class="col-sm">
                <div class="card">
                    <div class="card-body">
                    <label for="modelo">Modelo:</label>
                            <select class="form-control" name="modelo">
                                <option value="{{pdv.modelo}}">{{pdv.modelo}}</option>
                                <option value="Clielo Lio V1 - Azul">Clielo Lio V1 - Azul</option>
                                <option value="Cielo Lio V2 - Preta">Cielo Lio V2 - Preta</option>
                                <option value="Bematech Smart POE">Bematech Smart POE</option>
                            </select>
                    </div>
                </div>
            </div>

            <div class="col-sm">
                <div class="card">
                    <div class="card-body">
                        <label for="nSerie">IMEI:</label>
                        <input class="form-control" type="number" name="nSerie" value="{{pdv.nSerie}}">                            
                    </div>
                </div>
            </div>
        </div>    

        
    </div>
    <button type="submit" class="btn btn-success mt-4">Salvar</button>
</div>
</form>
