<div class="container mt-4">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pills-home-tab" data-toggle="pill" data-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Monitoramento</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link btn-warning" id="pills-profile-tab" data-toggle="pill" data-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Saida de PDV</button>
    </li>
    <li class="nav-item" role="presentation">
        <button style="color: black;" class="nav-link btn-success" id="pills-contact-tab" data-toggle="pill" data-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Retorno de PDV</button>
    </li>
    </ul>

    <div class="tab-content" id="pills-tabContent">
        
        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
            <div class="card mt-2">
                <div class="card-body">
                    <table class="table table-bordered">
                        <p style="font-weight: bold;">PDVs Aguardando Retorno</p>
                        <thead class="bg-info"> 
                            <tr>
                                    
                                <th scope="col">Nº PDV</th>
                                <th scope="col">Empresa</th>
                                <th scope="col">Utilizador</th>
                                <th scope="col">Linha</th>
                                <th scope="col">Veiculo</th>
                                <th scope="col">Hora saida</th>
                            </tr>
                        </thead>
                        {{#each movimentos}}
                        <tbody>
                            <tr>
                                <th scope="row">{{nControle}}</th>
                                <td>{{empresa}}</td>
                                <td>{{matricula}}</td>
                                <td>{{destino}}</td>
                                <td>{{veiculo}}</td>
                                <td>{{data_exib}}</td>
                            </tr>                                    
                        </tbody>
                        {{else}}
                        {{/each}}
                    </table>
                </div>
        </div>
        </div>

        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
            <div class="card mt-2">
                <div class="card-body">
                    <table class="table table-bordered">
                        <p style="font-weight: bold;">Escolha um PDV para lançar saida</p>
                        <thead>
                            <tr class="bg-warning">                                    
                                <th scope="col">Nº PDV</th>
                                <th scope="col">Empresa</th>
                                <th scope="col">Modelo</th>
                                <th scope="col">Status</th>
                                <th scope="col">-</th>
                            </tr>
                        </thead>
                        {{#each pdvsDisp}}
                        <tbody>
                            <tr>
                                <th scope="row">{{nControle}}</th>
                                <td>{{empresa}}</td>
                                <td>{{modelo}}</td>
                                <td>{{status}}</td>                                
                                <td><a href="/controle/saida_pdv/{{_id}}"><button class="btn btn-warning">Saida</button></a></td>
                            </tr>                                    
                        </tbody>
                        {{else}}
                        {{/each}}

                    </table>
                </div>
            </div>
        </div>

        <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
            <div class="card mt-2">
                <div class="card-body">
                    <table class="table table-bordered">
                        <p style="font-weight: bold;">Escolha um PDV para lançar Retorno</p>
                        <thead class="bg-success"> 
                            <tr>
                                <th scope="col">Nº PDV</th>
                                <th scope="col">Empresa</th>
                                <th scope="col">Modelo</th>
                                <th scope="col">Status</th>
                                <th scope="col">-</th>
                            </tr>
                        </thead>
                        {{#each pdvsInd}}
                        <tbody>
                            <tr>
                                <th scope="row">{{nControle}}</th>
                                <td>{{empresa}}</td>
                                <td>{{modelo}}</td>
                                <td>{{status}}</td>                                
                                <td><a href="/controle/retorno_pdv/{{_id}}"><button style="color: black;" class="btn btn-success">Retorno</button></a></td>
                            </tr>                                    
                        </tbody>
                        {{else}}
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>

    </div>

</div>
